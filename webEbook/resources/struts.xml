<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="ebook" extends="struts-default">
		<action name="loginAction" class="Action.Struts2.UserAction"
			method="login">
			<result name="success" type="redirectAction">home</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="logoutAction" class="Action.Struts2.UserAction"
			method="logout">
			<result name="success" type="redirectAction">home</result>
		</action>

		<action name="registerAction" class="Action.Struts2.UserAction"
			method="register">
			<result name="success" type="redirectAction">home</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="home" class="Action.Struts2.PostAction" method="execute">
			<result name="success">/home.jsp</result>
		</action>

		<action name="profile" class="Action.Struts2.UserAction"
			method="getProfile">
			<result name="success">/profile.jsp</result>
			<result name="noData">/noData.jsp</result>
		</action>

		<action name="detailPost" class="Action.Struts2.PostAction"
			method="detailPost">
			<result name="success">/detail.jsp</result>
			<result name="noId">/noData.jsp</result>
			<result name="noData">/noData.jsp</result>
		</action>

		<action name="sendCreatePost" class="Action.Struts2.PostAction"
			method="sendCreatePost">
			<result name="success">/createPost.jsp</result>
			<result name="noPermission">/error.jsp</result>
		</action>

		<action name="createPost" class="Action.Struts2.PostAction"
			method="createPost">
			<result name="success" type="redirectAction">listPost</result>
			<result name="noPermission">/error.jsp</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="sendUpdatePost" class="Action.Struts2.PostAction"
			method="sendUpdatePost">
			<result name="success">/updatePost.jsp</result>
			<result name="noPermission">/error.jsp</result>
		</action>

		<action name="updatePost" class="Action.Struts2.PostAction"
			method="updatePost">
			<result name="success" type="redirectAction">listPost</result>
			<result name="noPermission">/error.jsp</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="deletePost" class="Action.Struts2.PostAction"
			method="deletePost">
			<result name="success" type="redirectAction">listPost</result>
			<result name="noPermission">/error.jsp</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="listPost" class="Action.Struts2.PostAction"
			method="listPost">
			<result name="success">/listPost.jsp</result>
			<result name="noPermission">/error.jsp</result>
		</action>

		<action name="postCommentPost" class="Action.Struts2.CommentAction"
			method="postCommentPost">
			<result name="success" type="redirectAction">${#session['lastAction']}</result>
			<result name="noId">/noData.jsp</result>
			<result name="noData">/noData.jsp</result>
		</action>

		<action name="postCommentChapter" class="Action.Struts2.CommentAction"
			method="postCommentChapter">
			<result name="success" type="redirectAction">${#session['lastAction']}</result>
			<result name="noId">/noData.jsp</result>
			<result name="noData">/noData.jsp</result>
		</action>

		<action name="feedbackCommentPost" class="Action.Struts2.CommentAction"
			method="feedbackCommentPost">
			<result name="success" type="redirectAction">${#session['lastAction']}</result>
			<result name="noPostId">/noData.jsp</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="cancelFeedbackCommentPost" class="Action.Struts2.CommentAction"
			method="cancelFeedbackCommentPost">
			<result name="success" type="redirectAction">${#session['lastAction']}</result>
			<result name="noPostId">/noData.jsp</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="feedbackCommentChapter" class="Action.Struts2.CommentAction"
			method="feedbackCommentChapter">
			<result name="success" type="redirectAction">${#session['lastAction']}</result>
			<result name="noChapterId">/noData.jsp</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="cancelFeedbackCommentChapter" class="Action.Struts2.CommentAction"
			method="cancelFeedbackCommentChapter">
			<result name="success" type="redirectAction">${#session['lastAction']}</result>
			<result name="noChapterId">/noData.jsp</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="chapterDetail" class="Action.Struts2.ChapterAction"
			method="detailChapter">
			<result name="success">/detailChapter.jsp</result>
			<result name="noData">/noData.jsp</result>
		</action>

		<action name="sendAddChapter" class="Action.Struts2.ChapterAction"
			method="sendAddChapter">
			<result name="success">/addChapter.jsp</result>
			<result name="noPermission">/error.jsp</result>
			<result name="noPostId">/noData.jsp</result>
		</action>

		<action name="sendUpdateChapter" class="Action.Struts2.ChapterAction"
			method="sendUpdateChapter">
			<result name="success">/updateChapter.jsp</result>
			<result name="noPermission">/error.jsp</result>
			<result name="noPostId">/noData.jsp</result>
		</action>

		<action name="addChapter" class="Action.Struts2.ChapterAction"
			method="addChapter">
			<result name="success" type="redirectAction">${#session['lastAction']}</result>
			<result name="noPostChapter">/noData.jsp</result>
			<result name="noPermission">/error.jsp</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="updateChapter" class="Action.Struts2.ChapterAction"
			method="updateChapter">
			<result name="success" type="redirectAction">${#session['lastAction']}</result>
			<result name="fail">/error.jsp</result>
			<result name="noPermission">/error.jsp</result>
		</action>

		<!-- accept request post -->
		<action name="sendAcceptPost" class="Action.Struts2.PostAction"
			method="sendAcceptPost">
			<result name="success">/listPostPedding.jsp</result>
			<result name="noPermission">/error.jsp</result>
			<result name="notAdmin">/noData.jsp</result>
		</action>

		<action name="acceptPost" class="Action.Struts2.PostAction"
			method="acceptPost">
			<result name="success" type="redirectAction">sendAcceptPost</result>
			<result name="notAdmin">/error.jsp</result>
			<result name="fail">/error.jsp</result>
			<result name="noPermission">/error.jsp</result>
		</action>

		<!-- list saler -->
		<action name="listSaler" class="Action.Struts2.UserAction"
			method="listSaler">
			<result name="success">/listSaler.jsp</result>
			<result name="noPermission">/error.jsp</result>
			<result name="noData">/noData.jsp</result>
			<result name="notAdmin">/error.jsp</result>
		</action>

		<!-- list upgrad role -->
		<action name="listUpgrande" class="Action.Struts2.UserAction"
			method="listUpgrande">
			<result name="success">/listUpgradeRole.jsp</result>
			<result name="noPermission">/error.jsp</result>
			<result name="noData">/noData.jsp</result>
			<result name="notAdmin">/noData.jsp</result>
		</action>

		<action name="updateRoleUser" class="Action.Struts2.UserAction"
			method="updateRoleUser">
			<result name="success" type="redirectAction">listUpgrande</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="searchEbook" class="Action.Struts2.PostAction"
			method="searchEbook">
			<result name="success">/home.jsp</result>
			<result name="noData">/noData.jsp</result>
		</action>
	</package>

	<package name="default" extends="json-default">
		<action name="ajaxAction" class="Action.Struts2.TestAjaxAction">
			<result type="json">
			</result>
		</action>
	</package>


</struts>