<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="ebook" extends="struts-default">
		<action name="home" class="Action.Struts2.PostAction" method="execute">
			<result name="success">/home.jsp</result>
		</action>

		<action name="detailPost" class="Action.Struts2.PostAction"
			method="detailPost">
			<result name="success">/detail.jsp</result>
			<result name="noId">/test.jsp</result>
			<result name="noData">/test.jsp</result>
		</action>

		<action name="sendCreatePost" class="Action.Struts2.PostAction">
			<result name="success">/createPost.jsp</result>
		</action>

		<action name="createPost" class="Action.Struts2.PostAction"
			method="createPost">
			<result name="success" type="redirectAction">listPost</result>
			<result name="fail">/test.jsp</result>
		</action>
		
		<action name="sendUpdatePost" class="Action.Struts2.PostAction" method="sendUpdatePost">
			<result name="success">/updatePost.jsp</result>
		</action>
		
		<action name="updatePost" class="Action.Struts2.PostAction"
			method="updatePost">
			<result name="success" type="redirectAction">listPost</result>
			<result name="fail">/test.jsp</result>
		</action>

		<action name="listPost" class="Action.Struts2.PostAction"
			method="listPost">
			<result name="success">/listPost.jsp</result>
		</action>

		<action name="postCommentPost" class="Action.Struts2.CommentAction"
			method="postCommentPost">
			<result name="success" type="redirectAction">${#session['lastAction']}</result>
			<result name="noId">/test.jsp</result>
			<result name="noData">/test.jsp</result>
		</action>

		<action name="postCommentChapter" class="Action.Struts2.CommentAction"
			method="postCommentChapter">
			<result name="success" type="redirectAction">${#session['lastAction']}</result>
			<result name="noId">/test.jsp</result>
			<result name="noData">/test.jsp</result>
		</action>

		<action name="chapterDetail" class="Action.Struts2.ChapterAction"
			method="detailChapter">
			<result name="success">/detailChapter.jsp</result>
			<result name="noData">/test.jsp</result>
		</action>

	</package>
</struts>